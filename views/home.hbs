<div class="container">
  <h1>{{user.name}} {{user.last_name}}</h1>

  <img class="ui centered small circular image" src="{{user.profile_pic}}">
  <form action="/{{#if client}}client{{else}}member{{/if}}/image" method="POST" enctype="multipart/form-data">

    <div class="field">
      <input type="file" name="photo" class="inputfile" id="imagesFileInput" />
      <label for="imagesFileInput" class="ui medium center button">
        <i class="ui upload icon"></i>
        Subir imagen
      </label>
    </div>
    <button type="submit" class="ui teal submit button">Guardar</button>
  </form>

  {{#if user.active}}
  <p></p>
  {{else}}
  <div class="ui warning message">
    <i class="close icon"></i>
    <div class="header">Su usuario no esta verificado</div>
  </div>
  {{/if}}

  <div class="ui pointing secondary menu">
    <a class="item active" data-tab="perfil">Perfil</a>
    <a class="item" data-tab="mensajes">Mensajes</a>
  </div>

  <div class="ui bottom attached tab active" data-tab="perfil">
    {{> profile}}
  </div>

  <div class="ui bottom attached tab" data-tab="mensajes">
    {{> message}}
  </div>
</div>
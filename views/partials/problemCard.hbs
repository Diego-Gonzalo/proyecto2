<div class="ui card">
  <a class="content" href="/{{#if client}}client/quote/{{_id}}{{else}}member/quote/{{_id}}{{/if}}">
    <div class="header">{{title}}</div>
    <div class="meta">
      <span class="date">{{update_at}}</span>
    </div>
    <div class="description">
      <p>{{description}}</p>
      <p>Presupuesto: <strong>$ {{maxBudget}}</strong></p>
    </div>
  </a>
  <div class="extra content">
    {{#if client}}
    <div class="left floated button">
      <div class="ui icon buttons">
        <button class="ui green button" id="edit" onclick="mostrarData({{_id}})">
          <i class="edit icon"></i>
        </button>
        <button class="ui red button" data-id="{{this._id}}">
          <i class="trash icon"></i>
        </button>
      </div>
    </div>
    {{/if}}
    <div class="right floated author">
      <img class="ui avatar image" src="{{author.profile_pic}}"> {{author.name}} {{author.last_name}}
    </div>
  </div>
</div>
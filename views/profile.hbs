<div class="container">
  <div class="ui basic segment">
    <img class="ui centered small circular image" src="{{member.profile_pic}}">
    <h4 class="ui dividing header"></h4>

    <div class="ui centered grid">
      <div class="eight wide column">
        <div class="ui form">

          <div class="field">
            <div class="ui left icon input">
              <i class="user icon"></i>
              <input type="text" name="name" value="{{member.name}}" disabled="" placeholder="First Name">
            </div>
          </div>

          <div class="field">
            <div class="ui left icon input">
              <i class="user icon"></i>
              <input type="text" name="last_name" value="{{member.last_name}}" disabled="" placeholder="Last Name">
            </div>
          </div>

          <div class="field">
            <textarea rows="4" name="description" disabled="" placeholder="Escribe un poco de lo haz echo">{{member.description}}</textarea>
          </div>

          <div class="field">
            <div class="ui left icon input">
              <i class="genderless icon"></i>
              <input type="text" name="gender" value="{{member.gender}}" disabled="" placeholder="gender">
            </div>
          </div>

          <div class="field">
            <div class="ui left icon input">
              <i class="envelope icon"></i>
              <input type="text" name="email" value="{{member.email}}" disabled="" placeholder="Email">
            </div>
          </div>

          <div class="field">
            <div class="ui left icon input">
              <i class="map marker alternate icon"></i>
              <input type="text" name="address" value="{{member.address}}" disabled="" placeholder="Direccion">
            </div>
          </div>

          <div class="ui list">
            {{#each member.services as |service|}}
            <div class="item"><i class="cog icon"></i> {{service}} </div>
            {{/each}}
          </div>

        </div>
      </div>
    </div>

  </div>
</div>
<div class="ui basic segment">

  <div class="ui items">
    <div class="item">
      <div class="ui small image">
        <img src="{{problem.author.profile_pic}}">
      </div>
      <div class="content">
        <div class="header">{{problem.author.name}} {{problem.author.last_name}}</div>
        <div class="meta">
          <span class="price">$ {{problem.maxBudget}}</span>
          <span class="date">{{problem.updated_at}}</span>
        </div>
        <div class="description">
          <p>{{problem.description}}</p>
          {{#if member}} <button class="ui blue button" id="quote">Ofertar</button> {{/if}}
        </div>
      </div>

      <div class="extra">
        <div class="ui massive right floated horizontal list">
          <div class="item">
            {{#each problem.images as |image|}}
            <img class="ui small image" src="{{image}}">
            {{/each}}
          </div>
        </div>
      </div>

    </div>
  </div>


  <div class="ui tiny modal quote">
    {{> quoteForm}}
  </div>

  <!--Lista de ofertantes-->
  <div class="ui list">
    {{#each quotes as |quote|}}
    <div class="item">
      <img class="ui avatar image" src="/images/avatar2/small/rachel.png">
      <div class="content">
        <a class="header">Rachel</a>
        <div class="description">Last seen watching <a><b>Arrested Development</b></a> just now.</div>
      </div>
    </div>
    {{/each}}
  </div>

  <pre>{{problem}}</pre>

</div>